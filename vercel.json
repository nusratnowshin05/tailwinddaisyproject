{
  "version": 2,
  "builds": [
    {
      "src": "src/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.html"
    }
  ],

  "scripts": {
    "build": "tailwindcss-i ./src/input.css -o ./src/output.css --minify"
  }
}
